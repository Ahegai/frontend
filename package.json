{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build:frontend": "vite build --config vite.config.mjs",
    "build:electron": "vite build --config vite.electron.config.mjs",
    "build:app": "npm run build:frontend && npm run build:electron && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --fix"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.7",
    "@mdi/font": "7.4.47",
    "axios": "^1.13.2",
    "pinia": "^3.0.3",
    "qrcode": "^1.5.4",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1",
    "whatsapp-web.js": "^1.34.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.35.0",
    "eslint-config-vuetify": "^4.2.0",
    "sass-embedded": "^1.92.1",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-fonts": "^1.4.0",
    "unplugin-vue-components": "^29.0.0",
    "unplugin-vue-router": "^0.15.0",
    "vite": "^7.1.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-vue-layouts-next": "^1.0.0",
    "vite-plugin-vuetify": "^2.1.2"
  },
  "build": {
    "appId": "com.example.myapp.broadcast",
    "productName": "Broadcast",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
